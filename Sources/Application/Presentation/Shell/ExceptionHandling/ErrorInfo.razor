@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-3 text-danger">
            🤯 Uuups!
        </h1>
        <p class="lead">Etwas ist mächtig schiefgelaufen...</p>
    </div>

    <div class="card shadow-lg border-danger mb-4">
        <div class="card-header bg-danger text-white">
            Fehler Typ: <strong>@AppError?.ErrorType</strong>
        </div>
        <div class="card-body">
            <p class="card-text">
                <strong>Nachricht:</strong> @AppError?.ErrorMessage
            </p>
            <details class="mt-3">
                <summary class="text-muted">Stacktrace (auf eigene Gefahr öffnen)</summary>
                <pre class="bg-light p-3 border rounded mt-2 text-break">@AppError?.StrackTrace</pre>
            </details>
        </div>
    </div>

    <div class="text-center">
        <button class="btn btn-outline-primary btn-lg" @onclick="GoHome">
            🔄 Zurück zur Startseite
        </button>
    </div>
</div>