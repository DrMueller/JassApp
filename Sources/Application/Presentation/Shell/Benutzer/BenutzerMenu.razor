@using MudBlazor
<MudMenu Label="@EmailAddress">
    <MudMenuItem>
        @* ReSharper disable start Html.PathError *@
        <form action="benutzer/logout" method="post">
            <AntiforgeryToken />
            <input type="hidden" name="ReturnUrl" value="@CurrentUrl" />
            <button type="submit" class="nav-link">
                <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Ausloggen
            </button>
        </form>
        @* ReSharper disable end Html.PathError *@
    </MudMenuItem>
</MudMenu>