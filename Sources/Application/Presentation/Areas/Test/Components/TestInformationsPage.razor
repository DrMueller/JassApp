@using JassApp.Presentation.Shared.Infos

@attribute [Route(Path)]

<Informations Entries="@Infos"></Informations>

<div class="jass-board">
    <div class="jass-board__inner chalk">
        <div class="jass-title">
            <h1>Coiffeur-Jass</h1>
            <div class="meta">Tisch 1</div>
        </div>

        <div class="jass-grid">
            <div class="jass-panel">
                <table class="jass-table">
                    <thead>
                    <tr>
                        <th>Runde</th>
                        <th>Team A</th>
                        <th>Team B</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr><td>1</td><td>35</td><td>22</td></tr>
                    <tr><td>2</td><td>18</td><td>47</td></tr>
                    </tbody>
                </table>
            </div>

            <div class="jass-panel">
                <div class="jass-badge"><span class="jass-dot jass-dot--ok"></span> Frei</div>
                <div class="chalk-line"></div>
                <button class="jass-btn jass-btn--ok">Neue Runde</button>
            </div>
        </div>
    </div>
</div>
