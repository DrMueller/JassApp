@using JassApp.Presentation.Shared.LoadingIndication
@using MudBlazor
@attribute [Route(Path)]

<LoadingIndicator IsLoading="IsLoading">
    <MudCard>
        <MudForm Model="@EditModel" ValidationDelay="0">
            <MudCardContent>
                <MudTextField @bind-Value="EditModel!.Name"
                              For="@(() => EditModel!.Name)"
                              Immediate="true"
                              Label="Name"/>
            </MudCardContent>
        </MudForm>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="SaveAsync">Save</MudButton>
            <MudButton Variant="Variant.Outlined" Class="mx-2" OnClick="Cancel">Cancel</MudButton>
        </MudCardActions>
    </MudCard>
</LoadingIndicator>