@using MudBlazor
<MudTd>
    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
        <MudNumericField
            Max="16"
            Min="0"
                      @bind-Value="TrumpfrundeResultat.Punkte"
                      @bind-Value:after="HandleValueChangedAsync"
                      Immediate="true"/>

        <MudCheckBox @bind-Value="TrumpfrundeResultat.IstMatch"
                     @bind-Value:after="HandleValueChangedAsync">*</MudCheckBox>
        <MudCheckBox @bind-Value="TrumpfrundeResultat.IstKonterMatch"
                     @bind-Value:after="HandleValueChangedAsync">**</MudCheckBox>
    </MudStack>
</MudTd>
<MudTd>
    <MudText>@CoiffeurTrumpfrunde.CalculatePunktedifferenz(TrumpfrundeResultat.TeamTyp)</MudText>
</MudTd>