@using MudBlazor
<MudGrid Class="mt-4">

    <!-- Top row -->
    <!-- top left: Team 2 - Player 2 -->
    <MudItem xs="6" Class="d-flex justify-center">
        <MudStack AlignItems="AlignItems.Center" Spacing="1">
            <MudText Typo="Typo.subtitle2">Team 2 – Player 2</MudText>
            <SpielerSelect OnSpielerChanged="OnSpieler4Selected" Spieler="@Spieler"/>
        </MudStack>
    </MudItem>

    <!-- top right: Team 1 - Player 2 -->
    <MudItem xs="6" Class="d-flex justify-center">
        <MudStack AlignItems="AlignItems.Center" Spacing="1">
            <MudText Typo="Typo.subtitle2">Team 1 – Player 2</MudText>
            <SpielerSelect OnSpielerChanged="OnSpieler2Selected" Spieler="@Spieler"/>
        </MudStack>
    </MudItem>

    <!-- Bottom row -->
    <!-- bottom left: Team 1 - Player 1 -->
    <MudItem xs="6" Class="d-flex justify-center mt-6">
        <MudStack AlignItems="AlignItems.Center" Spacing="1">
            <MudText Typo="Typo.subtitle2">Team 1 – Player 1</MudText>
            <SpielerSelect OnSpielerChanged="OnSpieler1Selected" Spieler="@Spieler"/>
        </MudStack>
    </MudItem>

    <!-- bottom right: Team 2 - Player 1 -->
    <MudItem xs="6" Class="d-flex justify-center mt-6">
        <MudStack AlignItems="AlignItems.Center" Spacing="1">
            <MudText Typo="Typo.subtitle2">Team 2 – Player 1</MudText>
            <SpielerSelect OnSpielerChanged="OnSpieler3Selected" Spieler="@Spieler"/>
        </MudStack>
    </MudItem>

</MudGrid>